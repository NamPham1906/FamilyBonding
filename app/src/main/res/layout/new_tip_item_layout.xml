<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="225dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tipImageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/example_avatar"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 mẹo chăm sóc răng hiệu quả nhất"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sourceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thanhnien.vn"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/primary_green"/>

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 phút trước"
                android:textSize="9dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="#B9C8BD"/>

        </LinearLayout>

        <TextView
            android:id="@+id/checkDetailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/small_blue_button_shape"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Xem ngay"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>